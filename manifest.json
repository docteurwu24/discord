{
  "manifest_version": 3,
  "name": "Discord AI Assistant",
  "version": "1.0",
  "description": "Assistant IA discret pour Discord",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Discord AI Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
